datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(cuid())
  email   String   @unique
  screen  String   @unique
  iconUrl String
  public  Boolean
  created DateTime
  posts   Post[]
}

model Post {
  id       String   @id @default(cuid())
  content  String
  date     DateTime
  public   Boolean
  author   User     @relation(fields: [authorId], references: [id])
  authorId String
}
