datasource db {
  provider = "sqlite"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String   @id @default(cuid())
  pass    String
  screen  String   @unique
  nick    String?
  email   String?
  iconUrl String?
  public  Boolean  @default(false)
  created DateTime @default(now())
  posts   Post[]
}

model Post {
  id       String   @id @default(cuid())
  content  String
  date     DateTime
  public   Boolean
  author   User     @relation(fields: [authorId], references: [id])
  authorId String
}
